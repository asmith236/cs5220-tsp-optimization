#!/bin/bash
#SBATCH -J dp_run              # Job name
#SBATCH -o dp_%j.out           # Standard output file
#SBATCH -e dp_%j.err           # Standard error file
#SBATCH -A m4776                # Account name for billing
#SBATCH -C cpu                  # Node type (assuming you are using CPU nodes)
#SBATCH -c 32                   # Number of CPU cores to allocate
#SBATCH --qos=debug             # Quality of service (change if necessary)
#SBATCH -t 00:10:00             # Time limit (HH:MM:SS)
#SBATCH -N 1                    # Number of nodes
#SBATCH -n 1                    # Number of tasks (usually 1 for single executable)
#SBATCH --mem=16GB              # Memory allocation (adjust as needed)

# Compile the code
make build/dp                     # Assuming your makefile has a target called dp_exe (change if necessary)

# Run the executable with srun
srun ./build/dp --csv data/small.csv                   # Replace with the actual executable name (e.g., ./dp_exe or ./dp.x)
